<section id="login mfa recovery">
    <div class="container">
        <div class="row">
            <div class="col-12 mt-5 d-flex justify-content-center">
                <h1>2-Step Verification Recovery</h1>
            </div>
            <div class="col-12 col-md-6 mx-auto mt-5">
                {{> frontend/notifications}}
                <form id="recovery" action="/mfa/recovery" method="POST">
                    <div class="form-group">
                        <label for="code">Recovery Code</label>
                        <input type="text" class="form-control" id="code" name="code" placeholder="Enter Recovery Code" required>
                    </div>
                    <input type="hidden" name="token" value="{{token}}">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
                <a class="mt-3 d-block" href="/login">Back to login page</a>
            </div>
        </div>
    </div>
</section>