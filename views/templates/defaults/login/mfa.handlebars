<section id="login mfa">
    <div class="container">
        <div class="row">
            <div class="col-12 mt-5 d-flex justify-content-center">
                <h1>2-Step Verification</h1>
            </div>
            <div class="col-12 col-md-6 mx-auto mt-5">
                {{> frontend/notifications}}
                <form id="mfa" action="/mfa" method="POST">
                    <div class="form-group">
                        <label for="code">One-Time Password</label>
                        <input type="number" class="form-control" id="code" name="code" placeholder="Enter One-Time Password" required>
                    </div>
                    <input type="hidden" name="token" value="{{token}}">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
                <a class="mt-3 d-block" href="/login">Cancel</a>
            </div>
        </div>
    </div>
</section>