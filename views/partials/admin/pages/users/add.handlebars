<hr>

<div class="row">
  <h5>Add User</h4>
    <form action="/adduser" method="POST" id="adduser">
      <div class="form-row">
        <div class="col-12 col-lg-3">
          <small id="usernameHelp" class="form-text text-muted">New user's username.</small>
          <input name="username" type="text" aria-describedby="usernameHelp" class="form-control"
            placeholder="Username">
        </div>
        <div class="col-12 col-lg-3">
          <small id="emailHelp" class="form-text text-muted">New user's email.</small>
          <input name="email" type="email" aria-describedby="emailHelp" class="form-control" placeholder="Email">
        </div>
        <div class="col-12 col-lg-3">
          <small id="nicknameHelp" class="form-text text-muted">New user's nickname.</small>
          <input name="nickname" type="text" aria-describedby="nicknameHelp" class="form-control"
            placeholder="Nickname">
        </div>
      </div>
      <div class="form-row">
        <div class="col-12 col-lg-3">
          <small id="passwordHelp" class="form-text text-muted">New user's password.</small>
          <input name="password" type="password" aria-describedby="passwordHelp" class="form-control"
            placeholder="Password">
        </div>
        <div class="col-12 col-lg-3">
          <small id="passwordCheckHelp" class="form-text text-muted">Re-type password.</small>
          <input name="passwordCheck" type="password" aria-describedby="passwordCheckHelp" class="form-control"
            placeholder="Retype Password ...">
        </div>
        <div class="col-12 col-lg-3">
          <small id="roleHelp" class="form-text text-muted">User Role.</small>
          <select name="role" class="form-control custom-select" id="role" aria-describedby="roleHelp">
            <option value="Administrator">Administrator</option>
            <option value="User">User</option>
            <option value="Visitor" selected>Visitor</option>
          </select>
        </div>
      </div>
      <button type="submit" class="btn btn-outline-info">Add User</button>
    </form>
</div>