{{#if taxonomies}}
    <div class="row">
    {{#each taxonomies}}
    {{#with this}}
        <div class="form-group col-12 col-md-4 col-lg-3">
            <label for="title-{{@key}}"><a href="/admin/taxonomy/edit/{{_id}}"><h5 id="title-{{@../key}}">{{name}}</h5></a></label><br>
            {{#if terms}}
                {{#each terms}}
                {{#with this}}
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" name="taxonomies" class="custom-control-input" id="termCustomCheck-{{@../key}}-{{@key}}" value="{{_id}}"{{inArray associations ../../post._id 0 " checked"}}>
                        <label class="custom-control-label" for="termCustomCheck-{{@../key}}-{{@key}}">{{name}}</label>
                    </div>
                {{/with}}
                {{/each}}
            {{else}}
            <p>No terms set for this taxonomy.</p>
            {{/if}}
        </div>
    {{/with}}
    {{/each}}
    </div>
{{else}}
    <p>No taxonomies set for posts.</p>
{{/if}}