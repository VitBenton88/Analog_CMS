{{#if taxonomies}}
    <div class="row">
    {{#each taxonomies}}
        <div class="form-group col-12 col-md-4 col-lg-3">
            <label for="title-{{@key}}"><a href="/admin/taxonomy/edit/{{this.id}}"><h5 id="title-{{@../key}}">{{this.name}}</h5></a></label><br>
            {{#if this.terms}}
                {{#each this.terms}}
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" name="taxonomies" class="custom-control-input" id="termCustomCheck-{{@../key}}-{{@key}}" value="{{this.id}}" {{#contains this.associations ../../post.id}}checked{{/contains}}>
                        <label class="custom-control-label" for="termCustomCheck-{{@../key}}-{{@key}}">{{this.name}}</label>
                    </div>
                {{/each}}
            {{else}}
            <p>No terms set for this taxonomy.</p>
            {{/if}}
        </div>
    {{/each}}
    </div>
{{else}}
    <p>No taxonomies set for posts.</p>
{{/if}}